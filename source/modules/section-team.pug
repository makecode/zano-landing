// section roadmap
section.section.team
  div.section__wrap.container

    each team in teams

      h2.section__title.title.centred

        each word in team.title
          if !word.selected && !word.shadow
            span.title__text=word.text
          if word.shadow
            span.title__shadow=word.text
          if word.selected
            span.title__text-select=word.text

      ul.team-list

        each teammate in team.members

          li.team-list__el
            div.teammate
              div.teammate__picture
                if teammate.picture
                  img.teammate__img(src=require(`../media/${teammate.picture}`)).teammate__pic
              div.teammate__name=teammate.name
              div.teammate__position=teammate.position
