// section hero
section.section.hero
  div.section__wrap.container

    h1.section__title.title.centred
      span.title__text Secure &
      span.title__text-select &nbspTruly&nbsp
      span.title__text Anonymous
      span.title__shadow ZANO

    p.section__subtitle Zano is the development of a stable and secure coin, designed to use in e-commerce. The technology behind our blockchain provides reliability, security, and flexibility, making it a viable option for P2P transactions.

    div.buttons
      div.drop-down
        a.button.blue.drop-down__toggle(href='downloads/zano_wp.pdf' title='Whitepaper')
          span Whitepaper
          span.icon.button-triangle
        div.drop-down__menu
          a.drop-down__item(href='https://github.com/hyle-team/zano') GitHub

      a.button.disabled(href='#')
        span.button__text Coinswap

    div.section__icon#section-hero-icon
      include icon-hero.html
      div.keywords
        span.keyword Commerce
        span.keyword Core
        span.keyword PRIVACY
