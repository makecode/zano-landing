.keywords
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

.keyword
  position: absolute
  font-size: 64px
  opacity: 0.08
  font-weight: 900

  &:nth-child(1)
      top: 2%
      left: 9%

  &:nth-child(2)
      top: 2%
      right: 17%

  &:nth-child(3)
    bottom: 30%
    left: 50%
    transform: translateX(-50%)
