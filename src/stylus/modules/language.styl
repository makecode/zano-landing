.language
  font-size: 13px
  color: $text-controls

  &__active
    padding-right: 20px
    display: inline-block
    position: relative
    font-weight: 700
    cursor: pointer

  &__active::after
    pseudo()
    transform: translateY(-50%)
    top: 50%
    right: 0
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid $text-controls;
