$resource-gradient-top = #1e2c66
$resource-gradient-bottom = #16224b

.resources
  margin: 100px 0 50px
  display: flex
  flex-direction: row
  justify-content: space-between

.resource
  padding: 40px 0
  width: 340px
  height: 330px
  display: inline-flex
  flex-direction: column
  align-items: center
  border-radius: 14px
  background: linear-gradient(to bottom, $resource-gradient-top, $resource-gradient-bottom)
  box-sizing: border-box

  &__title
    margin: 20px 0 0
    color: white
    font-size: 13px
    text-transform: uppercase

  &__description
    margin: 0
    font-size: 14px

  &__links
    margin-top: 20px
    display: flex
    flex-direction: row
    justify-content: center

  &__link
    margin: 0 10px
    transition: all 0.3s ease-in-out

  &__link:hover
    transform: rotate(-15deg)