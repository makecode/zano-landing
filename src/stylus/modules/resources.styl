.resources
  margin: 100px 0 50px
  display: flex
  flex-direction: row
  justify-content: space-between

.resource
  width: 340px
  height: 330px
  display: inline-flex
  flex-direction: column
  align-items: center
  border-radius: 14px
  background: linear-gradient(to bottom, #1e2c66, #16224b)

  &__title
    text-transform: uppercase
    font-size: 13px
    color: white

  &__description
    font-size: 14px

  &__links
    display: flex
    flex-direction: row
    justify-content: center

  &__link
    margin: 0 10px