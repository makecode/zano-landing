$footer-bg-top = #1c2c66
$footer-bg-bottom = #192859

body
  display: flex
  flex-direction: column
  background-image: url('https://i.imgur.com/Jtwy3zn.jpg')
  background-size: cover

header
footer
  text-align: center

main
  min-height: 100vh
  display: flex
  flex-direction: column

.container
  padding: 0 20px
  width 100%
  width: 1180px
  max-width: 1180px
  margin: 0 auto

.header
  padding: 50px 20px
  position: relative
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: space-between
  align-items: center

  &__center
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

  &__right
    display: flex
    flex-direction: row
    align-items: center

  .language
    margin-right: 20px

.footer
  padding: 50px 0
  display: flex
  flex-direction: column
  justify-content: space-around
  height: 340px
  background-image: linear-gradient(to bottom, $footer-bg-top, $footer-bg-bottom)

  &__copyright
    font-size: 11px