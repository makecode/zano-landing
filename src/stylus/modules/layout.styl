$footer-bg-top = #1c2c66
$footer-bg-bottom = #192859

body
  display: flex
  flex-direction: column

header
footer
  text-align: center

main
  min-height: 100vh
  display: flex
  flex-direction: column

  +m($tablet)
    padding-top: 70px

.container
  padding: 0 20px
  width 100%
  width: 1180px
  max-width: 1180px
  margin: 0 auto
  
  +m($laptop)
    width: 100%
    padding: 20px


.header
  padding: 50px 20px
  position: relative
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: space-between
  align-items: center

  +m($tablet)
    position: fixed
    top: 0
    left: 0
    width: 100%
    padding: 10px 20px
    justify-content: center
    background-color: rgba($bg-body, 0.9)
    box-shadow: 10px 0px 50px 0px rgba(0,0,0,0.75)
    z-index: $z-header

  &__center
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    +m($tablet)
      display: none

  &__right
    display: flex
    flex-direction: row
    align-items: center
    
    +m($tablet)
      display: none

  .language
    margin-right: 20px

.footer
  padding: 50px 0
  display: flex
  flex-direction: column
  justify-content: space-around
  height: 340px
  background-image: linear-gradient(to bottom, $footer-bg-top, $footer-bg-bottom)

  &__copyright
    font-size: 11px