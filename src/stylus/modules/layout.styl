$footer-bg-top = #1c2c66
$footer-bg-bottom = #192859

body
  display: flex
  flex-direction: column
  background-color: alpha($bg-one, 0.9)
  background-image: url('assets/bg.png')
  background-size: cover

header
footer
  padding: 20px 0
  text-align: center

main
  flex: 1
  display: flex
  align-items: center
  justify-content: center
  text-align: center

.container
  width 100%
  max-width: 1140px
  margin: 0 auto

.header
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: space-between
  align-items: center

  &__right
    display: flex
    flex-direction: row
    align-items: center

  .language
    margin-right: 20px

.footer
  display: flex
  flex-direction: column
  justify-content: space-around
  height: 340px
  background-image: linear-gradient(to bottom, $footer-bg-top, $footer-bg-bottom)

  &__copyright
    font-size: 11px