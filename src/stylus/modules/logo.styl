.logo
  display: inline-flex
  flex-direction: row
  align-items: center
  justify-content: center
  cursor: pointer

  &__img
    width: 50px
    height: 50px
    transition: transform 1s ease-in-out

  &__img

  &__title
    margin-left: 14px
    text-transform: uppercase
    font-weight: 700
    font-size: 12px
    letter-spacing: 1px
    color: $text-controls

.logo:hover .logo__img
  transform: rotateY(180deg)