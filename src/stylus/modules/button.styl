.buttons 
  margin: 20px 0

  .button
    margin: 0 14px

.button
  padding: 2px
  display: inline-flex
  align-items: center
  justify-content: center
  width: 154px
  height: 50px
  border-radius: 10px
  text-decoration: none
  color: white
  font-size: 13px
  font-weight: 700
  text-transform: uppercase
  letter-spacing: 1px
  cursor: pointer
  background-image: linear-gradient(to right, $button-gradient-one, $button-gradient-two)
  box-sizing: border-box

  &__text
    display: inline-flex
    align-items: center
    justify-content: center
    border-radius: 10px
    width: 100%
    height: 100%
    background-color: $button-background

  &.blue
    background-image: linear-gradient(to bottom, $button-gradient-one, $button-gradient-two)
    border: none
  
  .icon.download
    margin-right: 8px

  .icon.button-triangle
    margin-left: 8px
