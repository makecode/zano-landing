.buttons 
  margin: 20px 0

  .button
    margin: 0 14px

.button
  display: inline-flex
  align-items: center
  justify-content: center
  width: 154px
  height: 50px
  border: 2px solid $blue
  border-radius: 10px
  text-decoration: none
  color: white
  font-size: 13px
  font-weight: 700
  text-transform: uppercase
  letter-spacing: 1px
  box-sizing: border-box
  cursor: pointer