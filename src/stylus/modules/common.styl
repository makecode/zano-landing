html
body
  width: 100%
  height: 100%
  color: $text-main
  font-family: 'Roboto', sans-serif
  font-weight: 400

body
  line-height: 1
  font-size: 16px

h1, h2, h3, h4, h5, h6
  margin 0

p
  margin 0

a
  display: inline-block
  text-decoration none

ul
  padding: 0
  margin: 0
  list-style: none

*
  box-sizing: border-box

@keyframes eye
  0%
    transform: rotateY(0deg)
  100%
    transform: rotateY(360deg)
