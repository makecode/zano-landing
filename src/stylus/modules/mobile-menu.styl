.mobile-menu
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: $bg-body url('assets/bg-mobile.png') repeat
  background-size: contain
  box-shadow: inset 0px 0px 500px 0px rgba(0,0,0,0.75)
  z-index: $z-mobile-menu
  transition: $tr-mobile-menu
  opacity: 0
  visibility: hidden

  &.opened
    opacity: 1
    visibility: visible

  .navigation
    position: absolute
    top: 130px
    left: 50%
    transform: translateX(-50%)
    display: flex
    flex-direction: column
    text-align: center

    &__link
      margin: 0 0 30px 0
      font-size: 30px