.title
  position: relative

  &__select    
    color: $blue
  
  &__shadow
    position: absolute
    bottom: 30px
    left: 0
    font-size: 144px
    font-weight: 900
    opacity: 0.03

    +m($tablet)
      font-size: 100px
      bottom: 20px

    +m($mobile)
      font-size: 70px
      bottom: 14px

  &.centred .title__shadow
    left: 50%
    transform: translateX(-50%)